<MenuButton>
    pos_hint:{"center_x":.5}
    icon_size: "32sp"
    tooltip_text: root.icon.capitalize()
    tooltip_bg_color: self.theme_cls.bg_dark
    tooltip_text_color: 0, 0, 0, 1
    shift_y: self.height
    shift_right: dp(96)

<MagicMenu>
    size_hint: None, None
    size: "84dp","320dp"
    pos_hint:{"center_x":.5, "center_y":.5}
    radius: self.width / 2
    elevation: 8

    canvas:
        Color:
            rgba: 0,1,0,1
        RoundedRectangle:
            pos: self.x + dp(6), self.y + dp(6) + root.pos_marker
            size: self.width - dp(12), self.width - dp(12)
            radius: [(self.width - dp(12))/2]

    MDRelativeLayout:
        id: buttons_container