<Dashboard>:
    padding: dp(8)
    spacing: dp(16)
    BoxLayout:
        spacing: dp(16)
        orientation: 'vertical'
        size_hint_x: .75
        BoxLayout:
            spacing: dp(8)
            padding: dp(8)
            size_hint_y: .4
            BoxWithShadow:
                padding: dp(8)
                orientation: 'vertical'
                Text:
                    padding:dp(8)
                    size_hint_y: .15
                    text:"Temperature"
                    font_size: app.fonts.size.h3
                    font_name: app.fonts.heading
                    color: app.colors.black
                    size_hint_y: None
                    height: dp(24)
                    pos_hint: {"center_y": 0.5}
                MDFloatLayout:
                    size_hint_y: .75
                    Gauge:
                        id: temp
                        radius: 80
                        pos_hint:{"center_x":.5, "center_y":.45}
                        content: "50Â°C"

                BoxLayout:
                    size_hint_y: .1
                    orientation: 'horizontal'
                    MDLabel:
                        text: "0"
                        font_size: app.fonts.size.h3
                        font_name: app.fonts.heading
                        color: app.colors.black
                        pos_hint: {"center_x":0.5, "center_y":0.5}
                        halign: "center"
                    MDLabel:
                        text: "100"
                        font_size: app.fonts.size.h3
                        font_name: app.fonts.heading
                        color: app.colors.black
                        pos_hint: {"center_x":0.5, "center_y":0.5}
